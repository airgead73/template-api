<div class="row">
  <div class="col-12">
    <form action="/api/auth" method="POST" class="card mx-auto shadow-sm" novalidate>
    <div class="card-header">
      <legend>sign in</legend>
    </div>
    <div class="card-body">
      {{#if error_msg}}

      <div class="alert alert-danger text-center">
        <small>{{error_msg}}</small>
        
        </div>

      {{/if}}
      <div class="form-group">
        <label for="email">Email address:</label>
        <input 
          type="email" 
          name="email" 
          class="form-control" 
          {{#if email}}
          value="{{email}}"
          {{/if}}
        >
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input 
          type="password" 
          name="password" 
          class="form-control" 
          {{#if password}}
          value="{{password}}"
          {{/if}}
          >
      </div>
    </div>
    <div class="card-footer">
      <button type="submit" class="btn btn-primary">sign in</button>      
    </div> 
  </form>
  </div>
</div>